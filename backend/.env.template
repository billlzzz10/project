# Environment Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///ai_business_app.db

# AI API Keys
GOOGLE_API_KEY=your-google-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HF_TOKEN=your-huggingface-api-token-for-inference-api

# Pinecone Vector DB
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENV=your-pinecone-environment-here
PINECONE_INDEX_NAME=your-pinecone-index-name-here

# Google Cloud Service Account
# Path to the service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=instance/google_credentials.json

# External Integrations
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
NOTION_API_KEY=your-notion-api-key-here
AIRTABLE_API_KEY=your-airtable-api-key-here

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Podcast Analysis
NOTION_PODCAST_DB_ID=YOUR_PODCAST_DATABASE_ID_HERE

# Airtable Configuration
AIRTABLE_API_KEY=your-airtable-personal-access-token
AIRTABLE_PROJECTS_BASE_ID=your-airtable-base-id-for-all-projects
AIRTABLE_NOVEL_BASE_ID=your-airtable-base-id-for-novel-data
AIRTABLE_ANOTHER_BASE_ID=your-airtable-base-id-for-another-purpose
AIRTABLE_EXTRA_BASE_ID=your-airtable-base-id-for-extra-data
